<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="20dp">
                <LinearLayout
                    android:layout_width="370dp"
                    android:layout_height="70dp"
                    android:layout_weight="1">
                    <Button
                        android:text="温度阈值："
                        android:id="@+id/bu_2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1">
                    </Button>
                    <EditText
                        android:id="@+id/ed_2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:text="25">
                    </EditText>
                    <Button
                        android:text="PH阈值："
                        android:id="@+id/bu_3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1">
                    </Button>
                    <EditText
                        android:id="@+id/ed_3"
                        android:layout_width="73dp"
                        android:layout_height="70dp"
                        android:text="7">
                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="370dp"
                    android:layout_height="70dp"
                    android:layout_weight="1">
                    <Button
                        android:text="浊度阈值："
                        android:id="@+id/bu_4"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1">
                    </Button>
                    <EditText
                        android:id="@+id/ed_4"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:text="20">
                    </EditText>
                    <CheckBox
                        android:id="@+id/Cb_1"
                        android:layout_width="185dp"
                        android:layout_height="70dp"
                        android:text="报警">
                    </CheckBox>
                </LinearLayout>
            </LinearLayout>
            <EditText
                android:id="@+id/ed_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="47.99.153.6">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/tur">
                </ImageView>
                <TextView
                    android:id="@+id/tx_1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="浊度：">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_weight="1">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/water_tmp">
                </ImageView>
                <TextView
                    android:id="@+id/tx_2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="水温：">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/electricity">
                </ImageView>
                <TextView
                    android:id="@+id/tx_3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="电导率：">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_weight="1">
                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/ph">
                    </ImageView>
                    <TextView
                        android:id="@+id/tx_4"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="PH值：">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/waterlevel">
                </ImageView>
                <TextView
                    android:id="@+id/tx_5"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="水位：">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_weight="1">
            </LinearLayout>
            <Button
                android:id="@+id/bu_1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/connect">
            </Button>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_weight="1">
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>